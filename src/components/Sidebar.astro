<style>
  svg {
    width: 32px;
    height: 32px;
    fill: white;
  }
  
  #mobile-nav {
    visibility: hidden;
    position: fixed;
    top: 8px;
    left: 8px;
    z-index: 101;
    height: 36px;
    width: 36px;
    border-radius: 10px;
    background-color: var(--secondary);
    display: flex;
    justify-content: center;
    align-items: center;
  }
  
  #mobile-nav button {
    width: 32px;
    height: 32px;
    display: flex;
    justify-content: center;
    align-items: center;
    border-radius: 10px;
    background: none;
    border: none;
    outline: none;
    cursor: pointer;
    transition: 0.3s ease;
  }
  
  .hidden-nav {
    z-index: 99 !important;
    top: 0 !important;
    left: 0 !important;
    height: 100% !important;
    width: 100% !important;
    background: none !important;
  }

  .hidden-nav button {
    opacity: 0;
    height: 100% !important;
    width: 100% !important;
  }

  #sidebar {
    position: fixed;
    z-index: 100;
    top: 0;
    left: 16px;
    height: 100%;
    width: 60px;
    display: flex;
    flex-direction: column;
    align-items: center;
    justify-content: space-between;
    transition: 0.3s ease;
  }
  
  #nav {
    width: 100%;
    margin-top: 50vh;
    transform: translateY(-50%);
    display: flex;
    flex-direction: column;
    align-items: center;
    border-radius: 10px;
    background-color: var(--secondary);
  }

  #nav a {
    display: block;
    justify-content: center;
    align-items: center;
    color: #ffffff;
    width: fit-content;
    margin: 8px 0;
    padding: 5px;
    border-radius: 10px;
    transition: 0.3s ease;
  }

  #nav a:hover, #nav a:focus-within {
    background-color: var(--primary);
    box-shadow: 0 0 8px var(--primary), 0 0 16px var(--primary);
    padding-left: 6px;
    transform: translateX(2px);
    outline: none;
  }

  #language-button {
    position: absolute;
    z-index: 1;
    bottom: 16px;
    left: 0;
    padding: 12px;
    display: flex;
    justify-content: center;
    align-items: center;
    background-color: var(--secondary);
    border: none;
    border-radius: 50%;
    cursor: pointer;
    transition: 0.3s ease;
  }

  #language-dropdown-parent {
    position: absolute;
    z-index: -1;
    bottom: 16px;
    left: 0;
    padding: 4px 12px 4px 24px;
    opacity: 0;
    background-color: var(--secondary);
    border-radius: 8px;
    pointer-events: none;
    transition: 0.3s ease;
  }

  #language-dropdown {
    margin: 0;
    list-style: none;
  }

  #language-picker:hover #language-button,
  #language-picker.focused #language-button {
    padding: 0;
    margin: 12px;
  }

  #language-picker:hover #language-dropdown-parent,
  #language-picker.focused #language-dropdown-parent {
    opacity: 1;
    pointer-events: auto;
  }

  #language-dropdown li {
    margin-top: 8px;
    margin-bottom: 8px;
  }

  .language-link {
    text-decoration: none;
    color: var(--text);
    padding: 6px 12px;
    display: block;
    border-radius: 5px;
    transition: 0.3s ease;
  }

  .language-link:hover, .language-link:focus-within {
    background-color: var(--primary);
    box-shadow: 0 0 8px var(--primary), 0 0 16px var(--primary);
    outline: none;
  }

  @media (max-height: 600px) {
    #nav {
      margin-top: 16px;
      transform: translateY(0);
    }
  }

  @media (max-width: 768px) {
    #mobile-nav {
      visibility: visible;
    }

    #sidebar {
      display: none;
      left: 0;
      background-color: var(--secondary);
    }

    #sidebar svg {
      width: 24px;
      height: 24px;
    }

    #nav {
      margin-top: 16px;
      transform: none;
    }
  }
</style>

<script>
  document.addEventListener('DOMContentLoaded', () => {
    const picker = document.getElementById('language-picker');
    const links = picker.querySelectorAll('.language-link');

    links.forEach((link, index) => {
      link.addEventListener('focus', () => {
        picker.classList.add('focused');
      });

      link.addEventListener('blur', (event: FocusEvent) => {
        const relatedTarget = event.relatedTarget as Node;
        if (!picker.contains(relatedTarget)) {
          picker.classList.remove('focused');
        }
      });
    });
  });

  document.getElementById("mobile-nav-button").addEventListener("click", toggleSidebar);
  function toggleSidebar() {
    const sidebar = document.getElementById('sidebar');
    let isNotVisible = sidebar.style.display === 'none' || sidebar.style.display === '';
    sidebar.style.display = isNotVisible ? 'flex' : 'none';

    const mobileNav = document.getElementById('mobile-nav');
    mobileNav.classList.toggle('hidden-nav');
  }
</script>
